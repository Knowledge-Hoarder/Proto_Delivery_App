<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/stLang"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/bg_gradient"
        android:text="@string/lang"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/stLangSelectEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:clickable="true"
        android:src="@mipmap/ic_round_canada_en_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stLang">

    </ImageView>

    <ImageView
        android:id="@+id/stLangSelectFR"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="70dp"
        android:clickable="true"
        android:src="@mipmap/ic_round_canada_fr_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stLang">

    </ImageView>

    <TextView
        android:id="@+id/versionTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v:0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>